<!-- PET INFO MODAL -->
<div class="modal fade" id="petInfoModal" tabindex="-1" aria-labelledby="petInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info"
                        type="button" role="tab" aria-controls="info" aria-selected="true">Información</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact"
                        type="button" role="tab" aria-controls="contact" aria-selected="false">Contacto</button>
                </li>
            </ul>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="info" role="tabpanel" aria-labelledby="info-tab">

                    <div class="modal-header">
                        <h5 class="modal-title">¿Lo viste?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col col-6">
                                <img src="/img/grey.webp" id="photoModal" class="img-fluid" alt="Foto de la mascota">
                            </div>
                            <div class="col col-6">
                                <div class="row main">
                                    <h5 id="nameModal"></h5>
                                    <p id="genderModal"></p>
                                </div>
                                <div class="second text-secondary">
                                    <p id="breedModal"></p>
                                    <p id="ageModal"></p>
                                </div>
                                <div class="col info">
                                    <p><b>Color:</b></p>
                                    <p id="colourModal"></p>
                                </div>
                                <div class="col">
                                    <p><b>Características:</b></p>
                                    <p id="featuresModal"></p>
                                </div>
                            </div>
                            <div class="col mt-4">
                                <h5>Datos sobre la pérdida</h5>
                                <div class="info">
                                    <p><b>Se perdió en:</b></p>
                                    <p id="placeModal"></p>
                                </div>
                                <div class="info">
                                    <p><b>Fecha:</b></p>
                                    <p id="dateModal"></p>
                                </div>
                                <div class="info">
                                    <p><b>Horario:</b></p>
                                    <p id="hourModal"></p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                    <div class="modal-header">
                        <h5 class="modal-title mt-2">Datos de contacto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body contact-body">
                        <div class="row contact-text">
                            <div class="col-12">
                                <p><b>Nombre:</b></p>
                                <p id="userNameModal"></p>
                            </div>
                            <div class="col-12">
                                <p><b>Correo:</b></p>
                                <p id="emailModal"></p>
                            </div>
                            <div class="col-12">
                                <p><b>Teléfono:</b></p>
                                <p id="numberModal"></p>
                            </div>
                        </div>

                        <div class="send-message-container my-2 mt-5">
                            <h5>Envíale un mensaje</h5>
                            <form id="sendMessage" class="mt-3">
                                <div id="textareaGroup">
                                    <label for="message" class="form-label">Mensaje</label>
                                    <div class="inputGroup">
                                        <textarea class="form-control" rows="3" id="textarea" name="textarea"
                                            placeholder="Escribe tu mensaje para el dueño aquí"></textarea>
                                             <i class="stateValidation fas fa-times-circle"></i>
                                    </div>
                                    <p class="inputError mt-1"><b>* </b>Incluir una descripción de hasta 1.000 caracteres</p>
                                </div>
                                <p class="formErrors inputError mt-1"><b>* </b>Debes iniciar sesión antes de enviar un mensaje</p>
                                <div class="d-flex justify-content-end mt-3">
                                    <button type="submit" class="btn small-btn">Enviar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

