<link rel="stylesheet" href="/css/sign.css">

<section class="start" id="start">
    <div class="container my-5">
        <div class="text p-5">
            <h3>Ya iniciaste sesión</h3>
            <h6>Empezá a usar la página <a href="/">aquí</a></h6>
        </div>
    </div>
</section>

<section class="sign-in">
    <div class="container my-5">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="/img/signin_form.jpg" alt="Imagen iniciar sesión"></figure>
                <a href="/registrarse" class="signup-image-link">Crear cuenta</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title mb-0">Iniciar sesión</h2>
                <p class="mb-5">¡Hola! Que bueno volver a verte</p>
                <form class="register-form" id="signInForm">
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input class="form-control" type="email" name="email" id="email" placeholder="correo@gmail.com" />
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Contraseña</label>
                        <input class="form-control" type="password" name="password" id="password" />
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="btn btn-medium mt-3"
                            value="Iniciar sesión" />
                    </div>
                </form>
                <div class="social-login">
                    <span class="social-label">O ingresar con</span>
                    <ul class="socials">
                        <li id="googleAuth"><a href="#"><i class="fab fa-google"></i></a></li>
                        <li id="facebookAuth"><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>